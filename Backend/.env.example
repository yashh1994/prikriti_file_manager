# Environment Configuration
NODE_ENV=development
PORT=3000

# Database Configuration (Optional - for future use)
DATABASE_URL=mongodb://localhost:27017/prikriti_file_manager
DB_NAME=prikriti_file_manager

# JWT Configuration (Optional - for future use)
JWT_SECRET=your_super_secret_jwt_key_here
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# File Upload Configuration
MAX_FILE_SIZE=104857600
ALLOWED_EXTENSIONS=jpg,jpeg,png,gif,pdf,doc,docx,txt,zip,rar,7z,csv,xlsx,xls,ppt,pptx,mp4,avi,mov,mp3,wav
UPLOAD_PATH=uploads

# CORS Configuration
CORS_ORIGIN=*

# Rate Limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# Logging
LOG_LEVEL=info
